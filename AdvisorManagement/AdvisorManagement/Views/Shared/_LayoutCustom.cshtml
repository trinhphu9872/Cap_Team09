<body>
    <form method="post">
        <div class="" style="background:#fff;min-height:100vh; margin: 0px 1px">
            <header id="header">
                <div class="row">
                    <div class="col-md-12">
                        <img style="width: 100%;max-height: 250px;" src="~/image/banner.jpg" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-xs-12">
                        <div id="header">
                            <nav class="navbar navbar-default stylecolor">
                                <div class="navbar-collapse collapse" id="menu">
                                    <ul class="nav navbar-nav">
                                        <a href="Home.html">
                                            <img src="~/image/logon.png"
                                                 style="width:216px;height:80px;top: 30px;left:45px">
                                        </a>
                                    </ul>
                                    <ul class="nav navbar-nav navbar-right">
                                        <li class="dropdown stylecolor"
                                            @if (Request.IsAuthenticated) {  <ul class="dropdown-menu stylecolor">
                                                        <li>
                                                            @Html.ActionLink("Hello " + User.Identity.Name + "!", "Index", "UserProfile", routeValues: null, htmlAttributes: null)
                                                        </li>
                                                        <li>
                                                            @Html.ActionLink("Sign out", "SignOut", "Account")
                                                        </li>
                                                    </ul>

                                            }
                                            else
                                            {
                                                <ul class="nav navbar-nav navbar-right">
                                                    <li>@Html.ActionLink("Sign in", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                                                </ul>
                                            }

                                        </li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>

            <div id="body" style="padding-bottom: 5px">
