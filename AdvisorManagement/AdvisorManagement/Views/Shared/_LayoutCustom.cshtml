                                        <div class="row">
                                            <div class="col-md-12">


                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="">
                                    <div class="col-md-12 accordion-inner"
                                         style="border-bottom: 1px solid #dfdfdf;background:#E8E8E8">

                                        <div class="row">
                                            <div class="col-md-12">
                                                <ul>
                                                    @if (ViewBag.menu != null)
                                                    {
                                                        List<AdvisorManagement.Models.ViewModel.MenuItem> listProduct = (List<AdvisorManagement.Models.ViewModel.MenuItem>)ViewBag.menu;
                                                        foreach (var item in listProduct)
                                                        {
                                                            <li style="padding:7px 0px">
                                                                <div id="test" style="width: 13px;
                                                                height: 1px;
                                                                border-bottom: 1px dotted #555;
                                                                float: left;
                                                                padding-top: 10px"></div>
                                                                @switch (item.menuName)
                                                                {
                                                                    case "Dashboard":
                                                                        <a style="color:#333;margin-left:3px"
                                                                           href="/Home/StudyPrograms">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Thông báo":
                                                                        <a style="color:#333;margin-left:3px"
                                                                           href="/Home/StudyPrograms">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Danh sách lớp":
                                                                        <a style="color:#333;margin-left:3px"
                                                                           href="/Home/StudyPrograms">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Thông tin lớp":
                                                                        <a style="color:#333;margin-left:3px"
                                                                           href="/Home/StudyPrograms">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Tư vấn và trao đổi":
                                                                        <a style="color:#333;margin-left:3px" href="/Home/Schedules">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Kế hoạch đầu học kì":
                                                                        <a style="color:#333;margin-left:3px" href="/Home/Exam">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Người dùng và phân quyền":
                                                                        <a style="color:#333;margin-left:3px"
                                                                           href="/Home/Decisions">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Lịch họp lớp":
                                                                        <a style="color:#333;margin-left:3px"
                                                                           href="/Home/XemDiemRenLuyen">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Công việc":
                                                                        <a style="color:#333;margin-left:3px" href="/Home/Marks">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Thống kê":
                                                                        <a style="color:#333;margin-left:3px"
                                                                           href="/Home/AccountFees">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Báo cáo cuối học kì":
                                                                        <a style="color:#333;margin-left:3px"
                                                                           href="/Home/ChiTietHoaDon">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Xử lí học tập":
                                                                        <a style="color:#333;margin-left:3px"
                                                                           href="/Home/TongHopHocPhi">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;
                                                                    case "Cài đặt":
                                                                        <a style="color:#333;margin-left:3px"
                                                                           href="/Home/TongHopHocPhi">
                                                                            @item.menuName
                                                                        </a>
                                                                        break;

                                                                }

                                                            </li>
                                                        }
                                                    }
                                                </ul>

                                            </div>
                                        </div>
                                    </div>

